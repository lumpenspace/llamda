[MASTER]
ignore-patterns=.*?_test.py

[MESSAGES CONTROL]
disable=no-docstrings,no-unused,unused-argument

[FORMAT]
max-line-length=100

[TYPECHECK]
ignored-modules=pytest
ignored-classes=pytest

[VARIABLES]
# Add this section to ignore unused variables in test files
dummy-variables-rgx=_.*|dummy|unused.*